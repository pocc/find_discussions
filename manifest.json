{
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["build/content_script.js"],
        "run_at": "document_end"
    }],
    "icons": {
        "16": "media/logo_16.png",
        "48": "media/logo_48.png",
        "128": "media/logo_128.png"
    },
    "browser_action": {
        "default_popup": "build/popup.html",
        "default_title": "Backlinks to discussions"
    },
    "web_accessible_resources": [
        "build/hn.js",
        "build/reddit.js",
        "build/stackexchange.js",
        "build/settings.js",
        "build/utils.js",
        "media/hackernews.ico",
        "media/reddit.ico",
        "media/stackexchange.ico",
        "media/post.svg",
        "media/story.svg",
        "media/comment.svg",
        "media/question.svg",
        "media/answer.svg"    
    ],
    "manifest_version": 2,
    "permissions": ["tabs", "notifications"],
    "author": "Ross Jacobs",
    "name": "Find Discussions",
    "description": "Browser extension to find discussions of your current page",
    "version": "0.0.1"
  }